<?xml version="1.0" encoding="utf-8"?>
<!--
    list item design
    list items to be inflated using recyclerView
-->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="title"
        android:id="@+id/tv_title_list_id"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Release Date"
        android:id="@+id/tv_release_date_list_id"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="ratings"
        android:id="@+id/tv_rating_list_id"
        />

</LinearLayout>